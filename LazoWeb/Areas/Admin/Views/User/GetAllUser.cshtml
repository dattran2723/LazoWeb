@model IEnumerable<LazoWeb.Models.ApplicationUser>
@using LazoWeb.Models;

@{
    ViewBag.Title = "danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LauoutAdmin.cshtml";
    ApplicationUser login = (ApplicationUser)Session["login"];
    int stt = 0;
}
<div class="getdanhsach">
    <h2>Danh sách tài khoản</h2>
    <p>
        <a href="/Account/Register" class="btn btn-success">Thêm tài khoản</a>
    </p>
    <table id="example" class="table table-striped table-bordered nowrap" style="width:100%">
        <thead>
            <tr>
                <th>STT</th>
                <th>
                    Email / Tên đăng nhập
                </th>
                <th>
                    Họ và tên
                </th>
                <th>
                    Ngày tạo
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    Hành động
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{stt++;} @stt
                    </td>
                    <td>
                        <a style="text-decoration: none;" href="/Admin/User/Details?id=@item.Id">@Html.DisplayFor(modelItem => item.Email)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @if (item.EmailConfirmed == true)
                        {
                            @Html.Raw("Đã xác nhận");
                        }
                        @if (item.EmailConfirmed == false)
                        {
                            @Html.Raw("Chưa xác nhận");
                        }
                    </td>
                    <td>
                        <a data-toggle="tooltip" title="Sửa" href="@Url.Action("Edit",new { id = item.Id })"><i class="fas fa-edit"></i></a>
                        <a data-toggle="tooltip" title="Chi tiết" href="@Url.Action("Details",new { id = item.Id })"><i class="fas fa-info-circle"></i></a>
                        @if (login.Id == item.Id)
                        {
                        }
                        else
                        {
                            <a data - toggle="tooltip" class="myBtnUser" title="Xóa" href="javascript:;" data-id="@item.Id"><i class="fas fa-trash-alt text-danger"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center"><b>Xóa tài khoản</b></h4>
                </div>
                <div class="modal-body">
                    <p class="text-center">Bạn có muốn xóa tài khoản này không ?</p>
                </div>
                <div class="modal-footer" id="myModel-href">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <a class="btn btn-danger" id="ConfirmDelete">Xóa</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModalSuccess" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h1 class="text-success"><i class="far fa-check-circle"></i></h1>
                    <p class="text-center">Đã xóa tài khoản thành công</p>
                </div>
                <div class="modal-footer" id="myModel-href1">
                    <a href="/admin/user/getalluser" class="btn btn-default">Đóng</a>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="myModalFail" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h1 class="text-danger"><i class="fas fa-exclamation"></i></h1>
                    <p class="text-center">Xóa tài khoản bị lỗi ! </p>
                </div>
                <div class="modal-footer" id="myModel-href1">
                    <a href="/admin/user/getalluser" class="btn btn-default">Đóng</a>
                </div>
            </div>

        </div>
    </div>
</div>
@section script {
    <script>
        $(document).ready(function () {
            $("#manage-accounts").addClass("active");
            $("#manage-accounts #list-accounts").addClass("active");
        });
    </script>
}
<script src="~/Scripts/js/btnXoa.js"></script>