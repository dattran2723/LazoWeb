@model LazoWeb.Models.ApplicationUser
@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LauoutAdmin.cshtml";
}
<div class="getdanhsach">
    <h2>Chi tiết tài khoản</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Tên đăng nhập
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                Họ và tên
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>
                Trạng thái tài khoản
            </dt>
            <dd>
                @if (Model.EmailConfirmed == true)
                {
                    @Html.Raw("Đã xác nhận");
                }
                @if (Model.EmailConfirmed == false)
                {
                    @Html.Raw("Chưa xác nhận");
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
        </dl>
    </div>
</div>
<p>
    <a class="btn btn-default" href="/admin/user/GetAllUser">Quay lại</a> 
</p>
