@model LazoWeb.Models.ApplicationUser

@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LauoutAdmin.cshtml";
}
<div class="getdanhsach">
    <h2>Xóa tài khoản</h2>
    <h3>Bạn có thực sự muốn xóa tài khoản này không?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                Họ và tên
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
<p>
    <a class="btn btn-default" href="/admin/user/GetAllUser">Quay lại</a>
</p>

