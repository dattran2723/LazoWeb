@model LazoWeb.Models.ForgotPasswordViewModel
@{
    //ViewBag.Title = "Quên mật khẩu";
    Layout = "";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Lazo - Quên mật khẩu</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/Content/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/Admin/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/Content/Admin/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/Admin/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/Content/Admin/plugins/iCheck/square/blue.css">
    <![endif]-->
    <!-- Google Font -->
    <link href="~/Content/css/login.css" rel="stylesheet" />
    <!-- jQuery 3 -->
    <script src="/Content/Admin/bower_components/jquery/dist/jquery.min.js"></script>
</head>
<body class="hold-transition login-page">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="login-box">
            <div class="login-logo">
                <img src="~/Content/img/page-1_0031_logo-trang.png" alt="Alternate Text" />
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <h4>Vui lòng nhập Email đã đăng kí</h4>
                <form action="/Content/Admin/index2.html" method="post">
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                    @*<div class="form-group has-feedback">
            @if (ViewBag.ThongBao != null)
            {
                <label class="text-danger">@ViewBag.ThongBao</label>
            }
        </div>*@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <a href="/Account/Login" class="btn btn-default">Quay lại</a>
                            <button type="submit" class="btn btn-primary btn-flat">Gửi</button>
                        </div>
                        <!-- /.col -->
                    </div>

                </form>
            </div>
            <!-- /.login-box-body -->
        </div>
    }
    <div class="modal fade" id="myModalSuccessQuenMatKhau" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <p class="text-center">Quên mật khẩu ?</p>
                    <p class="text-center">Vui lòng kiểm tra Email để lấy lại mật khẩu của bạn</p>
                </div>
                <div class="modal-footer" id="myModel-href1">
                    <a href="/account/login" class="btn btn-default">Đóng</a>
                </div>
            </div>
        </div>
    </div>
    @{
        if (ViewData["QuenMatKhau"] != null)
        {
            <script>
                $(document).ready(function () {
                    $("#myModalSuccessQuenMatKhau").modal();
                });
            </script>
        }
    }
    <!-- /.login-box -->
    <!-- Bootstrap 3.3.7 -->
    <script src="/Content/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/Content/Admin/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });</script>
</body>
</html>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>